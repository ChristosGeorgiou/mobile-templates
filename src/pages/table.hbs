{{>_start}}
<nav class="header-bar">
  <a href="tables.html" class="btn btn-link btn-sm mr-2 text-white">
    <span class="fa fa-chevron-left"></span>
  </a>
  <div class="header">
    <h4>Τραπέζι #06</h4>
    <h5>Επισκόπιση</h5>
  </div>
  <a href="table-settings.html" class="ml-auto mr-2 btn btn-lg btn-outline-light">
    <span class="fa fa-bars"></span>
  </a>
</nav>
<div class="list-menu mb-0">
  <div class="list-group-item d-flex align-items-center bg-light">
    <span class="icon fi-restaurant flaticon-waiter"></span>
    <h4>Παραγγελίες</h4>
    <a href="order-new.html" class="ml-auto btn btn-lg btn-success">
      <span class="fa fa-plus-circle"></span>
    </a>
  </div>
  {{#each items}}
  <div class="list-group-item">
    <div class="rounded text-center text-monospace text-white mr-2 px-2" style="background:{{color}};font-size:1rem;">
      <span class="{{status}}"></span>
    </div>
    <div>{{label}}</div>
    <h4 class="ml-auto">{{price}}&euro;</h4>
  </div>
  {{/each}}
  <div class="list-group-item d-flex align-items-center bg-light">
    <span class="icon fi-restaurant flaticon-wallet"></span>
    <h4>Σύνολα</h4>
    <a href="order-payment.html" class="ml-auto btn btn-lg btn-success">
      <span class="fa fa-credit-card"></span>
    </a>
  </div>
  <div class="list-group-item">
    <div>Σύνολο</div>
    <h4 class="ml-auto">{{bill.total}}&euro;</h4>
  </div>
  <div class="list-group-item">
    <div>Κεράσματα</div>
    <h4 class="ml-auto">{{bill.treat}}&euro;</h4>
  </div>
  <div class="list-group-item">
    <div>Πουρμπουάρ</div>
    <h4 class="ml-auto">{{bill.tip}}&euro;</h4>
  </div>
  <div class="list-group-item">
    <div>Εισπράξεις</div>
    <h4 class="ml-auto">{{bill.receivedFinal}}&euro;</h4>
  </div>
  <div class="list-group-item">
    <div>Υπόλοιπο</div>
    <h4 class="ml-auto">
      <span class="fa fa-check-circle text-success"></span> 0,00&euro;</h4>
  </div>
  <a href="tables.html" class="list-group-item bg-success text-white">
    <span class="icon fi-restaurant flaticon-invoice"></span>
    <div>
      <h4>Ολοκλήρωση</h4>
    </div>
  </a>
</div>
{{>_end}}