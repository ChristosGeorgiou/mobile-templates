<script src="/js/Chart.bundle.js"></script>
<script>
  var config = {
    type: 'line',
    data: {
      labels: ['Δ', 'Τ', 'Τ', 'Π', 'Π', 'Σ', 'Κ'],
      datasets: [{
        label: 'Παραγγελίες',
